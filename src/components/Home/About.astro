---
import { Markdown } from 'astro/components';
import Abilities from './Abilities.svelte';
import i18n from '../../i18n/home.json';
const { lang } = Astro.props;
---
<picture aria-hidden="true">
  <source srcset="/assets/curves-dark.svg" media="(prefers-color-scheme: dark)" />
  <img class="curves" src="/assets/curves.svg" alt="" />
</picture>
<div class="about">
  <section class="about-text" aria-labelledby="about-me-title">
    <h1 id="about-me-title">{i18n.aboutMe.title[lang]}</h1>
    <Markdown content={i18n.aboutMe.description[lang]} />
  </section>
  <div class="abilities">
    <Abilities lang={lang} client:visible />
  </div>
  <section aria-labelledby="projects-title">
    <h1 id="projects-title">{i18n.projects.title[lang]}</h1>
    <dl>
      {i18n.projects.list.map(project => (
      <div>
        <dt>{project.title}</dt>
        <dd>{project.description[lang]}</dd>
      </div>
      ))}
    </dl>
  </section>
  <section class="contact" aria-labelledby="contact-title">
    <h1 id="contact-title">{i18n.networks.title[lang]}</h1>
    <p>{i18n.networks.description[lang]}</p>
    <ul>
      {i18n
      .networks
      .links
      .map(link => <li>{link[lang]}</li>)}
    </ul>
  </section>
</div>

<style lang="scss">
.curves {
   display: block;
   width: 100%;
 }

 .about {
   display: flex;
   flex-wrap: wrap;
   justify-content: space-between;
   padding: 3rem 10vw;
   background: var(--background-color-alt);
   color: var(--base-font-color-on-alt);
   font-size: 1.125rem;

   .about-text {
     max-width: 100%;
     margin-bottom: 2rem;
   }

   :global(p) {
     line-height: 1.5rem;
   }

   :global(h1) {
     color: var(--color-primary-on-alt);
     font-size: var(--h1);
     font-weight: 700;
     margin-bottom: 1rem;
     line-height: var(--h1);
   }

   .abilities {
     background: var(--color-secondary-2-1);
     border-radius: 20px;
     padding: 1rem;
     width: 100%;
     height: 16rem;
     width: 16rem;
     margin-bottom: 2rem;
   }

   ul {

     li::before {
       content: "â†’";
       margin-right: 0.5rem;
     }
   }

   dl {
     margin-bottom: 2rem;
   }

   dt {
     font-size: 1.5rem;
     font-weight: 700;
     margin-top: 1rem;
   }

   dd {
     padding-left: 1rem;
   }

   @media only screen and (min-width: 768px) {
     .about-text {
       max-width: 50vw;
     }
   }
 }

 .contact {
   p {
     margin-bottom: 0.5rem;
   }
 }
</style>
