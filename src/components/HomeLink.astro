---
const { lang = 'en' } = Astro.props;
---

<a
  class="home-page-link"
  aria-label="Home page"
  href={lang === 'es' ? '/es' : '/'}>PB</a
>

<style lang="scss">
  a.home-page-link {
    display: inline-block;
    font-family: 'Roboto Slab', serif;
    font-size: 2rem;
    font-weight: 700;
    padding: 0.5rem;
    margin-left: 10vw;
    color: var(--color-heading);
    text-decoration: none;
  }
</style>
